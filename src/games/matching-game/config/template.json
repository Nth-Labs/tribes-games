  "fields": [
    {
      "name": "title",
      "label": "Game title",
      "type": "string",
      "scope": "merchant",
      "required": true,
      "description": "Headline displayed at the top of the experience."
    },
    {
      "name": "description",
      "label": "Game description",
      "type": "text",
      "scope": "merchant",
      "required": true,
      "description": "Supporting copy that explains the objective of the challenge."
    },
    {
      "name": "moveLimit",
      "label": "Move limit",
      "type": "number",
      "scope": "admin",
      "required": true,
      "description": "Maximum number of moves allowed before the game ends."
    },
    {
      "name": "initialRevealSeconds",
      "label": "Initial reveal (seconds)",
      "type": "number",
      "scope": "admin",
      "required": true,
      "description": "Duration for the pre-game reveal of all cards (set to 0 to disable)."
    },
    {
      "name": "cardUpflipSeconds",
      "label": "Card upflip duration (seconds)",
      "type": "number",
      "scope": "admin",
      "required": true,
      "description": "How long a card stays face-up before auto-flipping when no match is found."
    },
    {
      "name": "cardBackImage",
      "label": "Card back image",
      "type": "image",
      "scope": "merchant",
      "required": true,
      "description": "Image displayed on the back of every card."
    },
    {
      "name": "theme",
      "label": "Theme",
      "type": "object",
      "scope": "merchant",
      "required": true,
      "description": "Visual customisation options for the matching game interface.",
      "fields": [
        { "name": "backgroundColor", "type": "color", "required": false },
        { "name": "backgroundImage", "type": "string", "required": false },
        { "name": "backgroundOverlayColor", "type": "color", "required": false },
        { "name": "accentColor", "type": "color", "required": false },
        { "name": "titleColor", "type": "color", "required": false },
