        { "name": "panelBackgroundColor", "type": "color", "required": false },
        { "name": "panelBorderColor", "type": "color", "required": false },
        { "name": "panelShadowColor", "type": "color", "required": false },
        { "name": "boardBackgroundColor", "type": "color", "required": false },
        { "name": "boardBorderColor", "type": "color", "required": false },
        { "name": "boardShadowColor", "type": "color", "required": false },
        { "name": "cardBackBackgroundColor", "type": "color", "required": false },
        { "name": "cardFaceBackgroundColor", "type": "color", "required": false },
        { "name": "cardBorderColor", "type": "color", "required": false },
        { "name": "cardMatchedBackgroundColor", "type": "color", "required": false },
        { "name": "cardMatchedGlowColor", "type": "color", "required": false },
        { "name": "cardShadowColor", "type": "color", "required": false },
        { "name": "buttonBackgroundColor", "type": "color", "required": false },
        { "name": "buttonHoverBackgroundColor", "type": "color", "required": false },
        { "name": "buttonTextColor", "type": "color", "required": false },
        { "name": "cardFlipDurationMs", "type": "number", "required": false }
      ]
    },
    {
      "name": "submissionEndpoint",
      "label": "Submission endpoint",
      "type": "string",
      "scope": "admin",
      "required": true,
      "description": "API route that receives the post-game payload when results are submitted."
    },
    {
      "name": "cards",
      "label": "Card definitions",
      "type": "array",
      "scope": "admin",
      "required": true,
      "description": "Complete list of card entries available in the game.",
      "merchantEditableFields": ["type", "image", "altText"],
      "item": {
        "type": "object",
        "fields": [
          { "name": "id", "type": "string", "required": true },
          { "name": "type", "type": "string", "required": true },
          { "name": "image", "type": "image", "required": true },
          { "name": "altText", "type": "string", "required": false }
        ]
      }
    }
